<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.2.xsd">

    <changeSet author="Simon" id="20210502111000">
        <createTable tableName="goods">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="goods_pkey"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="volume" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="order_no" type="CHAR(32)">
                <constraints nullable="false" foreignKeyName="goods_order_fkey" references="order_(no)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>